<h2 class="text-center mt-4 mb-4">Create Category</h2>
<% if @category.errors.any? %>
	<div class="alert alert-danger col-sm-8 offset-sm-2 alert-dismissible fade show text-left" role="alert">
		<h4 class="alert-heading"> Error in signing up user</h4>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<ul>
			<% @category.errors.full_messages.each do | msg | %>
			<p><%= msg %></p>
			<% end %>
		</ul>
	</div>
<%end %>
<div class="card-body mt-5">
	<%= render 'form' %>
</div>