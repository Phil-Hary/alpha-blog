<h2 class="text-center mt-4 mb-4">Create Category</h2>
<% if @category.errors.any? %>
	<div class="alert alert-danger col-sm-8 offset-sm-2 alert-dismissible fade show text-left" role="alert">
		<h4 class="alert-heading"> Error in signing up user</h4>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<ul>
			<% @category.errors.full_messages.each do | msg | %>
			<p><%= msg %></p>
			<% end %>
		</ul>
	</div>
<%end %>
<div class="container mt-4 col-sm-8" id="create-form">
	<div class="card text-center">
		<div class="card-body mt-5">
			<%= form_with(model: @category, local: true) do |f| %>
	
				<div class="form-group row">
					<%= f.label "Category name", class: "col-sm-2 col-form-label" , placeholder: "Enter name"%><br/>
					<%= f.text_field :name, class: "col-sm-8 form-control" %>
				</div>
				
				<%= f.submit class: "btn btn-primary mt-4"%>
			<% end %>
		</div>
		<div class="card-footer text-muted mt-5">
			<%= link_to "Back to articles", articles_path %>
		</div>
	</div>
</div>