<% if @user.errors.any? %>
	<div class="alert alert-danger col-sm-8 offset-sm-2 alert-dismissible fade show text-left" role="alert">
		<h4 class="alert-heading"> Error in signing up user</h4>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<ul>
			<% @user.errors.full_messages.each do | msg | %>
			<p><%= msg %></p>
			<% end %>
		</ul>
	</div>
<%end %>
<%= form_with(model: @user, local: true) do |f| %>
	<div class="form-group row">
		<%= f.label :username, class: "col-sm-2 col-form-label" , placeholder: "Enter username"%><br/>
		<%= f.text_field :username, class: "col-sm-8 form-control" %>
	</div>
	
	<div class="form-group row">
		<%= f.label :email, class: "col-sm-2 col-form-label" , placeholder: "Enter your email"%><br/>
		<%= f.email_field :email, class: "col-sm-8 form-control" %>
	</div>
	
	<div class="form-group row">
	<!-- DB has password field as password_digest, but we can also use the vitual name password to access it-->
		<%= f.label :password, class: "col-sm-2 col-form-label" , placeholder: "Enter new password"%><br/>
		<%= f.password_field :password, class: "col-sm-8 form-control" %>
	</div>
	
	<%= f.submit "Sign Up", class: "btn btn-primary mt-4"%>
<% end %>