<% if @article.errors.any? %>
	<div class="alert alert-danger col-sm-8 offset-sm-2 alert-dismissible fade show" role="alert">
		<h4 class="alert-heading"> Error in creating the article</h4>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<ul>
			<% @article.errors.full_messages.each do | msg | %>
			<p><%= msg %></p>
			<% end %>
		</ul>
	</div>
<%end %>
<%= form_with(model: @article, local: true) do |f| %>
	<div class="form-group row">
		<%= f.label :title, class: "col-sm-2 col-form-label" %><br/>
		<%= f.text_field :title, class: "col-sm-8 form-control" %>
	</div>
	
	<div class="form-group row">
		<%= f.label :description, class: "col-sm-2 col-form-label" %><br/>
		<%= f.text_area :description,  rows:10, class: "col-sm-8 form-control" %>
	</div>
	
	<%= f.submit class: "btn btn-primary"%>
<% end %>