<% if @article.errors.any? %>
	<p> Error in creating the article</p>
	<ul>
		<% @article.errors.full_messages.each do | msg | %>
		<p><%= msg %></p>
		<% end %>
	</ul>
<%end %>
<%= form_with(model: @article, local: true) do |f| %>
	<div class="form-group row">
		<%= f.label :title, class: "col-sm-2 col-form-label" %><br/>
		<%= f.text_field :title, class: "col-sm-8 form-control" %>
	</div>
	
	<div class="form-group row">
		<%= f.label :description, class: "col-sm-2 col-form-label" %><br/>
		<%= f.text_area :description,  class: "col-sm-8 form-control" %>
	</div>
	
	<%= f.submit class: "btn btn-primary"%>
<% end %>