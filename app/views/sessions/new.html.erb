<h2 class="text-center mt-4 mb-4">Login</h2>

<div class="container mt-4 col-sm-8" id="create-form">
	<div class="card text-center">
		<div class="card-body mt-5">
			<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
	
				<div class="form-group row">
					<%= f.label :email, class: "col-sm-2 col-form-label" , placeholder: "Enter your email"%><br/>
					<%= f.email_field :email, class: "col-sm-8 form-control" %>
				</div>
				
				<div class="form-group row">
					<%= f.label :password, class: "col-sm-2 col-form-label" , placeholder: "Enter new password"%><br/>
					<%= f.password_field :password, class: "col-sm-8 form-control" %>
				</div>
				
				<%= f.submit "Login", class: "btn btn-primary mt-4"%>
			<% end %>
		</div>
		<div class="card-footer text-muted mt-5">
			<%= link_to "Back to articles", articles_path %>
		</div>
	</div>
</div>